{
  "name": "born-smooth",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "git@github.com:born-smooth/born-smooth.git",
  "license": "MIT",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "lint": "eslint \"packages/**/*.{ts,tsx}\" --config eslint.config.js",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix --config eslint.config.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
